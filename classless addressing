#include<stdlib.h>
#include<stdio.h>
#include<string.h>
char *ip_cl(char *ip_add){
    int i,j,k;
    int o[4];
    char *mask=(char *)malloc(sizeof(char)*16);
    int b=0;
    for(i=0;i<strlen(ip_add);i++){
        if(ip_add[i]=='.'){
            o[j++]=atoi(ip_add+k);
            k=i+1;
        }
    }
    o[j]=atoi(ip_add+k);
    for(i=0;i<4;i++){
        int oc=o[i];
        for(j=7;j>=0;j--){
            if(oc>=(1<<j)){
                 b++;
                 oc-=(1<<j);
            }
            else if(b%8!=0){
                break;
            }
        }
    }
    sprintf(mask,"%s/%d",ip_add,b);
    return mask;
}
void main(){
    char ip_add[16]="192.168.0.0";
    printf("Classless address:%s\n",ip_cl(ip_add));
}
